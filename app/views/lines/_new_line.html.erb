<%= form_with model:line, url: lines_path(line), method: :post,local:true do |f| %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, autofocus:true, class:"form-control"%>
  </div>

  <div class="field">
    <%= f.label :book_title %><br />
    <%= f.text_field :book_title, autofocus:true, autocomplete: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :jenru %><br />
    <%= select :jenrus,:name,Line.jenrus.keys.to_a %>
  </div>

  <div class="action">
    <%= f.submit "create", class:"btn btn-success" %>
  </div>
<% end %>