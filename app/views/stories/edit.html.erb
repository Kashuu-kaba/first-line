<div class="container">
  <div class="row">
    <div class="col-12 col-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model:@story, url:line_story_path(@story.line.id, @story.id), method: :patch, local:true do |f| %>
        <div class="field">
          <%= f.label :story_comment %>
          <%= f.text_area :story_comment, autofocus:true, autocomplete:"story_comment", class:"form-control"%>
        </div>

        <div class="action">
          <%= f.submit "update story", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>