<%=form_with model: [new_story,story], url:line_stories_path(story.line.id), method: :post,local:true do |f| %>
  <%= f.hidden_field :story_id, value: story.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= f.label :story_comment %>
    <%= f.text_area :story_comment, autofocus:true, autocomplete: "story_comment"%>
  </div>

  <div class="action">
    <%= f.submit "create story", class:"btn btn-success"%>
  </div>
<% end %>